<Page x:Class="podstrelov_PR2.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Главная страница" Height="451" Width="419">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Выберите задачу:" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <Button x:Name="btnTask1" Content="Задача 1 - Двоичное число" 
                    Click="BtnTask1_Click" Margin="10" Width="220" Height="35" FontSize="12"/>

            <Button x:Name="btnTask2" Content="Задача 2 - Тип числа в строке" 
                    Click="BtnTask2_Click" Margin="10" Width="220" Height="35" FontSize="12"/>

            <Button x:Name="btnTask3" Content="Задача 3 - Поиск в массиве" 
                    Click="BtnTask3_Click" Margin="10" Width="220" Height="35" FontSize="12"/>

            <Button x:Name="btnTask4" Content="Задача 4 - Перестановка в массиве" 
                    Click="BtnTask4_Click" Margin="10" Width="220" Height="35" FontSize="12"/>

            <Button x:Name="btnTask5" Content="Задача 5 - Сортировка матрицы" 
                    Click="BtnTask5_Click" Margin="10" Width="220" Height="35" FontSize="12"/>
        </StackPanel>
    </Grid>
</Page>