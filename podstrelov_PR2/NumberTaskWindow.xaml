<Window x:Class="podstrelov_PR2.NumberTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 1 - Двоичное число" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Задача 1: Число вводится своим двоичным представлением (длина числа не превышает 10000 двоичных разрядов). Необходимо определить, делится ли число на 15." 
                   TextWrapping="Wrap" FontSize="14" Margin="0,0,0,20"/>

        <TextBlock Text="Введите двоичное число:" Margin="0,10,0,5"/>
        <TextBox x:Name="txtBinary" Height="30" FontSize="14"/>

        <Button x:Name="btnCheck" Content="Проверить" 
                Click="BtnCheck_Click" Margin="0,10" Height="30" Width="100"/>

        <TextBlock Text="Результат:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox x:Name="txtResult" IsReadOnly="True" Height="30" 
                 FontSize="14" Background="#EEE"/>

        <Button x:Name="btnClose" Content="Закрыть" 
                Click="BtnClose_Click" Margin="0,20" Height="30" Width="80"
                HorizontalAlignment="Right"/>
    </StackPanel>
</Window>