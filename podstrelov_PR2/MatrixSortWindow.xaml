<Window x:Class="podstrelov_PR2.MatrixSortWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 5 - Сортировка матрицы" Height="600" Width="600"
        WindowStartupLocation="CenterScreen">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Задача 5: Сгенерировать массив размером M столбцов и N строк, содержащий числа от -10 до 10. Отобразить его пользователю. Отсортировать элементы по возрастанию и по убыванию. Найти максимальный и минимальный элементы." 
                       TextWrapping="Wrap" FontSize="14" Margin="0,0,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Количество строк (N):" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtRows" Height="30" FontSize="14" Text="3"/>

                    <TextBlock Text="Количество столбцов (M):" Margin="0,10,0,5"/>
                    <TextBox x:Name="txtCols" Height="30" FontSize="14" Text="4"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Button x:Name="btnGenerate" Content="Сгенерировать" 
                            Click="BtnGenerate_Click" Margin="0,20" Height="30"/>

                    <Button x:Name="btnSort" Content="Сортировать" 
                            Click="BtnSort_Click" Margin="0,10" Height="30"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Исходная матрица:" FontWeight="Bold" Margin="0,20,0,5"/>
            <TextBox x:Name="txtOriginal" IsReadOnly="True" Height="80" FontSize="12" 
                     Background="#EEE" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="По возрастанию:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtAscending" IsReadOnly="True" Height="80" FontSize="12" 
                     Background="#EEE" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="По убыванию:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtDescending" IsReadOnly="True" Height="80" FontSize="12" 
                     Background="#EEE" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="Максимальный и минимальный элементы:" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="txtMinMax" IsReadOnly="True" Height="30" FontSize="14" Background="#EEE"/>

            <Button x:Name="btnClose" Content="Закрыть" 
                    Click="BtnClose_Click" Margin="0,20" Height="30" Width="80"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </ScrollViewer>
</Window>