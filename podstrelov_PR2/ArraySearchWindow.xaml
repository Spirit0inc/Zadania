<Window x:Class="podstrelov_PR2.ArraySearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 3 - Поиск в массиве" Height="450" Width="500"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Задача 3: Найти в массиве все числа, составленные из одних и тех же цифр" 
                   TextWrapping="Wrap" FontSize="14" Margin="0,0,0,20"/>

        <TextBlock Text="Введите массив целых чисел (через пробел):" Margin="0,10,0,5"/>
        <TextBox x:Name="txtArray" Height="30" FontSize="14"/>

        <Button x:Name="btnFind" Content="Найти числа" 
                Click="BtnFind_Click" Margin="0,10" Height="30" Width="100"/>

        <TextBlock Text="Результат:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox x:Name="txtResult" IsReadOnly="True" Height="60" 
                 FontSize="14" Background="#EEE" TextWrapping="Wrap"/>

        <Button x:Name="btnClose" Content="Закрыть" 
                Click="BtnClose_Click" Margin="0,20" Height="30" Width="80"
                HorizontalAlignment="Right"/>
    </StackPanel>
</Window>