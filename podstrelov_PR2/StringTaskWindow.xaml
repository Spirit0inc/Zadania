<Window x:Class="podstrelov_PR2.StringTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 2 - Тип числа в строке" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Задача 2: Дана строка. Если она представляет собой запись целого числа, то вывести 1; если вещественного (с дробной частью), то вывести 2; если строку нельзя преобразовать в число, то вывести 0." 
                   TextWrapping="Wrap" FontSize="14" Margin="0,0,0,20"/>

        <TextBlock Text="Введите строку:" Margin="0,10,0,5"/>
        <TextBox x:Name="txtInput" Height="30" FontSize="14"/>

        <Button x:Name="btnCheck" Content="Проверить" 
                Click="BtnCheck_Click" Margin="0,10" Height="30" Width="100"/>

        <TextBlock Text="Результат:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox x:Name="txtResult" IsReadOnly="True" Height="30" 
                 FontSize="14" Background="#EEE"/>

        <Button x:Name="btnClose" Content="Закрыть" 
                Click="BtnClose_Click" Margin="0,20" Height="30" Width="80"
                HorizontalAlignment="Right"/>
    </StackPanel>
</Window>