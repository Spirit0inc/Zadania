<Window x:Class="podstrelov_PR2.ArrayReorderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Задача 4 - Перестановка в массиве" Height="500" Width="500"
        WindowStartupLocation="CenterScreen">

    <StackPanel Margin="20">
        <TextBlock Text="Задача 4: Дан массив целых чисел x[1]..x[m+n], рассматриваемый как соединение двух его отрезков: начала x[1]..x[m] длины m и конца x[m+1]..x[m+n] длины n. Не используя дополнительных массивов, переставить начало и конец." 
                   TextWrapping="Wrap" FontSize="14" Margin="0,0,0,20"/>

        <TextBlock Text="Введите массив целых чисел (через пробел):" Margin="0,10,0,5"/>
        <TextBox x:Name="txtArray" Height="30" FontSize="14"/>

        <TextBlock Text="Длина первого отрезка (m):" Margin="0,10,0,5"/>
        <TextBox x:Name="txtM" Height="30" FontSize="14" Width="100"/>

        <Button x:Name="btnReorder" Content="Переставить" 
                Click="BtnReorder_Click" Margin="0,10" Height="30" Width="100"/>

        <TextBlock Text="Исходный массив:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox x:Name="txtOriginal" IsReadOnly="True" Height="30" FontSize="14" Background="#EEE"/>

        <TextBlock Text="Результат:" FontWeight="Bold" Margin="0,10,0,5"/>
        <TextBox x:Name="txtResult" IsReadOnly="True" Height="30" FontSize="14" Background="#EEE"/>

        <Button x:Name="btnClose" Content="Закрыть" 
                Click="BtnClose_Click" Margin="0,20" Height="30" Width="80"
                HorizontalAlignment="Right"/>
    </StackPanel>
</Window>