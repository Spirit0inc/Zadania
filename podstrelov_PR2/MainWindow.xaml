<Window x:Class="podstrelov_PR2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Решение задач" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Хедер с номером варианта -->
            <RowDefinition Height="*"/>
            <!-- Основное содержание -->
        </Grid.RowDefinitions>

        <!-- Хедер с номером варианта -->
        <Border Grid.Row="0" Background="LightBlue" BorderBrush="Gray" BorderThickness="0,0,0,1">
            <TextBlock Text="Вариант №1" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Основное содержание - главная страница с кнопками -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>