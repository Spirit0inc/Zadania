<Page x:Class="prak_3.avtoriz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prak_3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="avtoriz">

    <Page.Resources>
        <Style x:Name="colorgreen" TargetType="DataGridRow">
            <Setter Property="Background" Value="Green"/>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions >
            <RowDefinition Height="25*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Background="Green"/>
        <Image Source="/Resurses/Statistical.png" Margin="15,16,700,16"/>
        <Button 
            Width="100" 
            Height="30" 

            Margin="650,0,0,0"
            Background="Transparent"
            BorderThickness="0" Click="Button_Click" >   
            <Border CornerRadius="10" Padding="15,5" Background="#2C3E50">
                <TextBlock Text="Назад" Foreground="White"/>
            </Border>
        </Button>

    </Grid>
</Page>
