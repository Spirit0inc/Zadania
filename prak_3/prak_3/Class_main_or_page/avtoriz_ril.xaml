<Page x:Class="prak_3.avtoriz_ril"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prak_3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="avtoriz_ril">

    <Grid Background="Green">
        <Grid.RowDefinitions>
            <RowDefinition Height="121*"/>
            <RowDefinition Height="237*"/>
            <RowDefinition Height="92*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="112*"/>
            <ColumnDefinition Width="262*"/>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="143*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1"
                Grid.ColumnSpan="2" 
                
               
                 MinWidth="200" Grid.Column="1" Height="194" Margin="172,21,151,22">

            <TextBlock 
            Text="Логин"
            Foreground="White"/>

            <TextBox x:Name="txtprice">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10" 
                Background="White" 
                BorderThickness="1" 
                BorderBrush="Gray">
                            <ScrollViewer x:Name="PART_ContentHost" 
                          Margin="5,2"/>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <TextBlock 
            Text="Пароль"
            Foreground="White"/>

            <TextBox x:Name="txtcotolog">
                <TextBox.Template>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10" 
                Background="White" 
                BorderThickness="1" 
                BorderBrush="Gray">
                            <ScrollViewer x:Name="PART_ContentHost" 
                          Margin="5,2"/>
                        </Border>
                    </ControlTemplate>
                </TextBox.Template>
            </TextBox>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button 
                Margin="0,0,5,0"
                Click="Button_Click"
                BorderThickness="0"
                Background="Transparent">
                    <Border CornerRadius="10" Background="Black" Padding="30,3">
                        <TextBlock Text="Войти" Foreground="White"/>
                    </Border>
                </Button>

                <Button 
                Margin="5,0,0,0"
                Click="GuestButton_Click"
                BorderThickness="0"
                Background="Transparent">
                    <Border CornerRadius="10" Background="Black" Padding="10,3">
                        <TextBlock Text="Войти как гость" Foreground="White" TextWrapping="Wrap"/>
                    </Border>
                </Button>
            </StackPanel>


        </StackPanel>

        <TabControl Visibility="Collapsed"/>
    </Grid>
</Page>
